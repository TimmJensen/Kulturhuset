                    <input id="titelInput" name="titelInput" type="text" class="form-control" value="<%= titel %>">
                    <div class="input-group-append">
                        <button id="titelKnap" class="btn btn-outline-secondary" type="submit">Skift titel</button>
                    </div>
                </div>
            </form>
        </div>
        <% include ../../partials/popup %>
